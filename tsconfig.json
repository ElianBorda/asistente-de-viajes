{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "NodeNext",
      "lib": ["ES2021.String"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}